@model UsuarioModel

@{
    ViewData["Title"] = "Confirmação de apagar o usuário";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>
<br />

<div class="text-center">
    <h1 class="display-6">Realmente deseja apagar o usuário: (@Model.Nome)?</h1>
</div>
<br />

<a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-block btn-danger" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>
